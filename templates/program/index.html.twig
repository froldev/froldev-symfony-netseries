{% extends 'base.html.twig' %}

{% block title %}Program index
{% endblock %}

{% block body %}
	<h1>Program index</h1>

	{{ form_start(formSearch) }}
	<div class="my-custom-class-for-errors">
		{{ form_errors(formSearch) }}
	</div>

	<div class="row">
		<div class="col">
			{{ form_row(formSearch) }}
			<button>Rechercher</button>
		</div>
	</div>
	{{ form_end(formSearch) }}

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Summary</th>
				<th>Poster</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for program in programs %}
				<tr>
					<td>{{ program.id }}</td>
					<td>{{ program.title }}</td>
					<td>{{ program.summary }}</td>
					<td>{{ program.poster }}</td>
					<td>
						<a href="{{ path('program_show', {'id': program.id}) }}">show</a>
						<a href="{{ path('program_edit', {'id': program.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('program_new') }}">Create new</a>
{% endblock %}
